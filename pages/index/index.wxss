/**index.wxss**/
page {
  background: var(--themeColor);
}
.head-photo {
  position: fixed;
  width: 100%;
  height: 100%;
  background: linear-gradient(var(--themeColor), var(--themeColorHelp)) var(--themeColorHelp);
  background-repeat: no-repeat;
  background-position: center;
  background-attachment: fixed;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 50rpx;
}

.head-main {
  margin-top: 80px;
  position: relative;
  margin-bottom: 40rpx;
}

.bar {
  width: 600rpx;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
}

.button {
  width: 250rpx;
  height: 100%;
  line-height: 100rpx;
  text-align: center;
  border-radius: 15rpx;
  background: #ffffff;
  color: #333333;
  position: relative;
}

.userinfo-topview {
  width: 320px;
  height: 320px;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  background: #f9f9f9;
}

.userinfo-topview image {
  width: 128rpx;
  height: 128rpx;
}

.userinfo-makebutton {
  width: 250rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background: var(--themeColor);
  color: #fff;
  border-radius: 15rpx;
  font-weight: 500;
  margin-top: 40rpx;
  position: relative;
}

.userinfo-imageview {
  position: relative;
  width: 320px;
  height: 320px;
  display: flex;
  justify-content: center;
}

.userinfo-canvas {
  position: absolute;
  width: 320px;
  height: 320px;
  visibility: hidden;
  top: -1000px;
}

.userinfo-avatar {
  width: 320px;
  height: 320px;
}

.userinfo-festivalview {
  position: absolute;
  z-index: 999;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.userinfo-festivalview-topline {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 2px;
  background-image: linear-gradient(to right, #fff 0%, #fff 50%, transparent 50%);
  background-size: 30px 2px;
  background-repeat: repeat-x;
}

.userinfo-festivalview-bottomline {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 2px;
  background-image: linear-gradient(to right, #fff 0%, #fff 50%, transparent 50%);
  background-size: 30px 2px;
  background-repeat: repeat-x;
}

.userinfo-festivalview-leftline {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  width: 2px;
  background-image: linear-gradient(to bottom, #fff 0%, #fff 50%, transparent 50%);
  background-size: 2px 30px;
  background-repeat: repeat-y;
}

.userinfo-festivalview-rightline {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  width: 2px;
  background-image: linear-gradient(to bottom, #fff 0%, #fff 50%, transparent 50%);
  background-size: 2px 30px;
  background-repeat: repeat-y;
}

.userinfo-festivalimage {
  width: 100%;
  height: 100%;
}

.userinfo-festivalrotate {
  position: absolute;
  width: 25px;
  height: 25px;
  bottom: -20px;
  right: -21px;
}

.preview {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.preview-img {
  width: 600rpx;
  height: 600rpx;
  margin-bottom: 50rpx;
}

.preview-img image {
  width: 100%;
  height: 100%;
}

.preview-desc {
  color: #fff;
  margin-bottom: 200rpx;
}

.preview-button {
  width: 250rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #fff;
  color: #333;
  border-radius: 45rpx;
  position: absolute;
  bottom: 200rpx;
}

.new-tag {
  width: 50rpx;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  border-radius: 15rpx;
  position: absolute;
  background-color: red;
  color: #fff;
  font-size: 22rpx;
  top: 0rpx;
  right: 0rpx;
}

.hand-icon {
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  top: 30rpx;
  transform: rotate(-30deg);
  animation: hand_click 1.5s infinite;
}

@keyframes hand_click {
  0% {
    transform: scale(1.5)
  }

  50% {
    transform: scale(1)
  }

  100% {
    transform: scale(1.5)
  }
}

.top-tip {
  width: 750rpx;
  height: 60rpx;
  line-height: 60rpx;
  top: 0;
  z-index: 1000;
  text-align: center;
  color: #333;
  background: #fff;
}

.top-tip-font {
  width: 500rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin-left: 60rpx;
}

.top-tip image {
  display: block;
  height: 40rpx;
  width: 40rpx;
  float: left;
  margin-top: 10rpx;
  margin-left: 20rpx;
}

.tip-content {
  font-size: 35rpx;
  color: #fff;
  text-align: center;
  margin-top: 100rpx;
}

.douyin {
  color: #a32dde;
}