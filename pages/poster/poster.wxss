/* pages/poster/poster.wxss */
page {
  background: linear-gradient(var(--themeColor), var(--themeColorHelp)) var(--themeColorHelp);
}

.poster-main {
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
}

.posterview {
  position: fixed;
  width: 100%;
  height: 100%;
  background: linear-gradient(var(--themeColor), var(--themeColorHelp)) var(--themeColorHelp);
}

.posterview-canvas {
  position: absolute;
  width: 600px;
  height: 1066px;
  background: white;
  visibility: hidden;
  top: -2000px;
}

.posterview-imageview {
  width: 100%;
  display: flex;
  justify-content: center;
  top: 0;
  margin-top: 20rpx;
  padding-top: env(safe-area-inset-bottom);
}

.posterview-image {
  width: 550rpx;
}

.posterview-bottomview {
  position: absolute;
  bottom: 40rpx;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 16px;
  color: #ccc;
  padding-bottom: env(safe-area-inset-bottom);
}

.num-tip {
  color: #fff;
  position: absolute;
  top: -80rpx;
}

swiper {
  height: 100%;
}

.save-button-view {
  width: 100%;
  display: flex;
  justify-content: center;
}

.save-button-item {
  width: 250rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: var(--themeColor);
  color: #fff;
  border-radius: 45rpx;
  font-weight: 500;
}