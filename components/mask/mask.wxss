/* components/mask/mask.wxss */
.mask{
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  transform: scale(0,0);
  background: rgba(0, 0, 0, .8);
}
.close{
  width: 100%;
  text-align: center;
  position: fixed;
  bottom: 30rpx;
  padding-bottom: env(safe-area-inset-bottom);
}
.close image{
  width: 60rpx;
  height: 60rpx;
}